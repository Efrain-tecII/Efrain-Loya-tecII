<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.calcuconvert.app.ConvertActivity"
    android:background="@drawable/temperatura">

    <TextView
        android:id="@+id/result"
        android:textSize="20sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textStyle="bold"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="°F"
        android:id="@+id/btnF"
        android:layout_marginLeft="39dp"
        android:textStyle="bold"
        android:layout_above="@+id/Valor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="°C"
        android:id="@+id/btnC"
        android:layout_marginRight="36dp"
        android:layout_alignTop="@+id/btnF"
        android:layout_alignRight="@+id/Valor"
        android:layout_alignEnd="@+id/Valor"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Valor"
        android:hint="ingrese el valor en °Grados a Convertir"
        android:textColorHint="#111111"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <requestFocus />
    </EditText>

</RelativeLayout>
