<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:background="#111111">


<TextView
        android:id="@+id/resultado"
        android:textSize="30sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginLeft="50px">

        <Button
            android:layout_column="4"
            android:id="@+id/Boton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="19dp"
            android:padding="25dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"


            >
        </Button>
        <Button
            android:layout_column="4"
            android:id="@+id/Boton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="19dp"
            android:padding="25dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            >


        </Button>
        <Button
            android:layout_column="4"
            android:id="@+id/Boton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="19dp"
            android:padding="25dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"

            >

        </Button>
        <Button
            android:layout_column="4"
            android:id="@+id/Botondiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="19dp"
            android:padding="25dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            >

        </Button>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginLeft="50px">

            <Button
                android:layout_column="4"
                android:id="@+id/Boton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="19dp"
                android:padding="25dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                >

            </Button>
            <Button
                android:layout_column="4"
                android:id="@+id/Boton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="19dp"
                android:padding="25dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"

                >

            </Button>
            <Button
                android:layout_column="4"
                android:id="@+id/Boton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="19dp"
                android:padding="25dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"

                >

            </Button>
            <Button
                android:layout_column="4"
                android:id="@+id/Botonmulti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="19dp"
                android:padding="25dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"

                >

            </Button>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginLeft="50px">

        <Button
                    android:layout_column="4"
                    android:id="@+id/Boton7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
            android:textSize="19dp"
            android:padding="25dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
                    >

                </Button>

        <Button
                    android:layout_column="4"
                    android:id="@+id/Boton8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
            android:textSize="19dp"
            android:padding="25dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"

                    >

                </Button>

        <Button
                    android:layout_column="4"
                    android:id="@+id/Boton9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
            android:textSize="19dp"
            android:padding="25dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"

                    >

                </Button>

        <Button
                    android:layout_column="4"
                    android:id="@+id/Botonsuma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
            android:textSize="19dp"
            android:padding="25dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
                    >

                </Button>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginLeft="50px">

        <Button
                    android:layout_column="4"
                    android:id="@+id/Boton0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
            android:textSize="19dp"
            android:padding="25dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
                    >

                </Button>

        <Button
                    android:layout_column="4"
                    android:id="@+id/Botonpunto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
            android:textSize="19dp"
            android:padding="25dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
                    >

                </Button>

        <Button
                    android:layout_column="4"
                    android:id="@+id/Botonresta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
            android:textSize="19dp"
            android:padding="25dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
                    >

                </Button>

        <Button
                    android:layout_column="4"
                    android:id="@+id/Botonigual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="="
            android:textSize="19dp"
            android:padding="25dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
                    >

                </Button>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:weightSum="1"
        android:layout_marginLeft="50px"
        android:baselineAligned="false">

        <Button
                    android:layout_column="4"
                    android:id="@+id/DEL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEL"
            android:textSize="19dp"
            android:padding="25dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_weight="0.35">

                </Button>

        <Button
                    android:layout_column="4"
                    android:id="@+id/CE"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:text="CE"
            android:textSize="19dp"
            android:padding="25dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_weight="0.42">

                </Button>
    </LinearLayout>


</LinearLayout>
